<div class="row">
		<h1>
			<%= $mix->title %>
		</h1>
		<span class="date">
			%= $mix->date_live
		</span>


	% if ($mix->download_link) {
		<span class="download_link">
			<a href="<%= $mix->download_link %>">
				download
			</a>
		</span>
	% }

	<ul class="collection with-header">
		<li class="collection-header"><h2>Tracklist</h2></li>
		% for my $track (@{$mix->tracks}) {
			<li class="collection-item">
				<%= $track->artist %> - <%= $track->title %>
			</li>
		% }
	</ul>

</div>
