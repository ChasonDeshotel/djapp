<div class="row">

	<ul class="collection with-header">
		<li class="collection-header">
			<h1><%= $mix->title %></h1>
			<p>
				%= $mix->date_live
				% if ($mix->download_link) {
					<br>
					<a href="<%= $mix->download_link %>">
						download
						<!-- format/filesize -->
					</a>
				% }
			</p>
		</li>
		% for my $track (@{$mix->tracks}) {
			<li class="collection-item">
				<%= $track->artist %> - <%= $track->title %>
			</li>
		% }
	</ul>

</div>
