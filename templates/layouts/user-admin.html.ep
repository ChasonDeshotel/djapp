<!DOCTYPE html>
<html>
  <head>
		<title><%= title %></title>
		<!--<script src="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css"></script>-->

		<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
		<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
		<style type="text/css">
			/** this to offset for fixed sidebar **/
			header, main, footer {
				padding-left: 300px;
			}

			@media only screen and (max-width : 992px) {
				header, main, footer {
					padding-left: 0;
				}
			}
		</style>

		<script
			src="https://code.jquery.com/jquery-3.5.1.min.js"
			integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
			crossorigin="anonymous">
		</script>

	</head>
  <body>

		<header>
			%= include 'account/_sidenav', fixed => 1
		</header>

		<main>
			<div class="container">

				% if (my $notice = flash 'notice') {
					%= include 'layouts/modal/_notice', notice => $notice
				% }

				<%= content %>
			</div>
		</main>

		<!--
		<footer class="page-footer deep-purple darken-4">
			<div class="footer-copyright">
				<div class="container">
					copyright text
				</div>
		</footer>
		-->
		<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

		<script type="text/javascript">
			document.addEventListener('DOMContentLoaded', function() {
				var elems = document.querySelectorAll('.sidenav');
				var instances = M.Sidenav.init(elems, {});
			});

		</script> 

	</body>
</html>
